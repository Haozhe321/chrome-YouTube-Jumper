{
  "manifest_version": 2,

  "name": "YouTube Jumper",
  "description": "This extension allows the user to jump to a certain time in a (long) YouTube video, and allows searching of words used in the video based on the transcription generated by YouTube.",
  "version": "2.0",

  "page_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Click here!"
  },
  "background": {
      "scripts": ["background.js"],
      "persistent": false
  },
  "commands": {
      "_execute_page_action": {
              "suggested_key": {
                "default": "Ctrl+J",
                "windows": "Ctrl+J",
                "mac": "Ctrl+J"
              }
      }
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ]
}
